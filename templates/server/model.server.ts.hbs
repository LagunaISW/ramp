}: Pick<{{modelName}}, {{#each properties}}"{{lowercaseWithId name}}"{{#unless @last}} | {{/unless}}{{/each}}>) {
  let data = {
    {{#each properties}}
    {{lowercaseWithId name}},
    {{/each}}
  };

  return prisma.{{camelCase modelName}}.create({
